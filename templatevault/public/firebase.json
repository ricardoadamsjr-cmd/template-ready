{
  "functions": {
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint"],
    "runtime": "nodejs18"
  },
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/stripeWebhook",
        "function": "stripeWebhook"
      },
      {
        "source": "/createCheckoutSession",
        "function": "createCheckoutSession"
      }
    ]
  }
}
